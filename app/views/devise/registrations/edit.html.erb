<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-ls-4">
      <div class="form-login">
        <h2>Profil de <%= current_user.username %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>
        <div class="form-inputs">
          <%= f.input :email, required: true, autofocus: true %>
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          <%= f.input :password,
                      hint: "laisser le champ vide si vous ne voulez pas changer de mot de passe",
                      required: false,
                      label: 'Nouveau mot de passe',
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      label: 'Nouveau mot de passe',
                      input_html: { autocomplete: "new-password" } %>
          <%= f.input :current_password,
                      hint: "Votre mot de passe actuel est nécessaire pour valider les changement",
                      required: true,
                      label: 'Mot de passe actuel',
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :username,
                      required: true,
                      label: 'Pseudo',
                      input_html: { autocomplete: "username" } %>
          <%= f.input :photo,
                      as: :file,
                      hint: "La photo sera utilisée pour votre avatar"%>

        </div>
        <div class="form-actions">
          <%= f.button :submit, "Modifier" %>
        </div>
        <% end %>
        <p><%= link_to "Supprimer mon compte", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
        <%= link_to "Retour", :back %>
      </div>
    </div>
  </div>
</div>
